doctype html
html
  head
    title= NodeAuth
    link(rel='stylesheet', href='../stylesheets/style.css')
    link(rel='stylesheet', href='../stylesheets/bootstrap.css')
    
  body
    nav.navbar.navbar-expand-sm.navbar-dark.fixed-top.bg-dark
      .container
        a.navbar-brand(href='#') NodeAuth
        button.navbar-toggler(data-toggle='collapse', data-target='#navbarNav')
          span.navbar-toggler-icon
        #navbarNav.collapse.navbar-collapse
          ul.navbar-nav.mr-auto
            if user
              li.nav-item(class=(title == 'Members' ? 'active':''))
                a.nav-link(href='/') Members
            if !user
              li.nav-item(class=(title == 'Register' ? 'active':''))
                a.nav-link(href='/users/register') Register
              li.nav-item(class=(title == 'Login' ? 'active':''))
                a.nav-link(href='/users/login') Log In
          ul.nav.navbar-nav
            if user
              li.nav-item
                a.nav-link(href='/users/logout') Logout
      
    
    .container.mt-3
      != messages()
      block content
    
    
    script(src='https://code.jquery.com/jquery-3.2.1.min.js')
    script(src='../javascripts/bootstrap.js')
    script(src='../javascripts/script.js')


   
                         
          
          
          
          